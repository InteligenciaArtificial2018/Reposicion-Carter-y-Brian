<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HaveToPayAgregarActivity">

    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etTitulo" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:hint="Titulo de la Nota"/>
    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etTitulo2" android:layout_marginTop="24dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:hint="Titulo un Comentario"
            app:layout_constraintTop_toBottomOf="@+id/edDate"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.057"/>
    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etDescripcion" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etTitulo" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Escribe "
    />

    <Button
            android:text="Agregar"
            android:layout_width="153dp"
            android:layout_height="51dp"
            android:id="@+id/btnAgregarTarea" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorButtonText" app:layout_constraintHorizontal_bias="0.502"/>
    <Spinner
            android:layout_width="360dp"
            android:layout_height="49dp"
            android:id="@+id/spCategoria" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etDescripcion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAlignment="textStart" android:scrollbarSize="18dp"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/edDate" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spCategoria" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="11dp" app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.16" app:layout_constraintEnd_toStartOf="@+id/edTime"
            android:textAlignment="center"
            android:hint="Fecha"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edTime" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spCategoria" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center"
            android:hint="Hora"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>